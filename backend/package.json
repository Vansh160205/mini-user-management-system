{
  "name": "mini-user-management-backend",
  "version": "1.0.0",
  "description": "Backend API for Mini User Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:init": "node src/database/init.js",
    "db:seed": "node src/database/seed.js",
    "db:reset": "node src/database/seed.js --reset",
    "db:setup": "npm run db:init && npm run db:seed",
    "test": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:verbose": "cross-env NODE_ENV=test jest --verbose --detectOpenHandles"
  },
  "keywords": [
    "user-management",
    "express",
    "jwt",
    "postgresql",
    "rbac"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/init.js",
      "!src/database/seed.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000
  }
}
